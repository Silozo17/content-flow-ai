{
  "openapi": "3.0.0",
  "info": {
    "title": "ContentFlow AI API",
    "version": "1.0.0",
    "description": "Backend API for ContentFlow AI - A modern SaaS platform for content creation and social strategy",
    "contact": {
      "name": "ContentFlow AI Support",
      "email": "support@contentflow-ai.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Development server"
    },
    {
      "url": "https://api.contentflow-ai.com",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "agency", "creator", "client"]
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "suspended"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ContentItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "platform": {
            "type": "string",
            "enum": ["tiktok", "instagram", "youtube", "linkedin", "twitter"]
          },
          "contentType": {
            "type": "string",
            "enum": ["video", "image", "carousel", "story", "post"]
          },
          "status": {
            "type": "string",
            "enum": ["draft", "review", "approved", "scheduled", "published", "rejected"]
          },
          "scheduledDate": {
            "type": "string",
            "format": "date-time"
          },
          "script": {
            "type": "string"
          },
          "caption": {
            "type": "string"
          },
          "hashtags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication and authorization"
    },
    {
      "name": "Users",
      "description": "User management"
    },
    {
      "name": "Content",
      "description": "Content creation and management"
    },
    {
      "name": "AI",
      "description": "AI content generation"
    },
    {
      "name": "Trends",
      "description": "Trending content and hashtags"
    },
    {
      "name": "Hashtags",
      "description": "Hashtag research and management"
    },
    {
      "name": "Inspiration",
      "description": "Content inspiration and analysis"
    },
    {
      "name": "Analytics",
      "description": "Social media analytics"
    },
    {
      "name": "Social Media",
      "description": "Social media account management"
    },
    {
      "name": "Files",
      "description": "File upload and management"
    },
    {
      "name": "Notifications",
      "description": "User notifications"
    }
  ],
  "paths": {}
}